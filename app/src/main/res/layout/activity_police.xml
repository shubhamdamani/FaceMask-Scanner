<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.facemaskdetection.PoliceActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/btncapsule"
        android:text="update signal"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:id="@+id/updBTN"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/btncapsule"
        android:text="check intruder"
        android:textColor="#ffffff"
        android:layout_below="@id/updBTN"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/intruderBTN"
        />

</RelativeLayout>